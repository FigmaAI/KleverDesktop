{
  "name": "klever-desktop",
  "version": "2.0.0",
  "description": "GUI Wrapper for AppAgent - Electron-based desktop application that makes Python-based UI automation accessible to non-developers. Wraps the external AppAgent open-source project with a user-friendly interface for Android (ADB) and Web (Playwright) automation.",
  "main": "dist-electron/index.js",
  "scripts": {
    "dev": "vite",
    "build:renderer": "tsc && vite build",
    "build:main": "tsc -p tsconfig.main.json",
    "build": "yarn build:main && yarn build:renderer",
    "prebuild": "node scripts/verify-bundle.js --skip-python",
    "preview": "vite preview",
    "electron": "electron .",
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "appagent:fetch": "node scripts/fetch-appagent.js",
    "python:build": "node scripts/build-python.js",
    "python:verify": "node scripts/verify-bundle.js"
  },
  "keywords": [
    "electron",
    "desktop",
    "ui-automation",
    "ollama",
    "ai"
  ],
  "author": "Klever Team",
  "license": "MIT",
  "dependencies": {
    "@emotion/react": "^11.13.3",
    "@emotion/styled": "^11.13.0",
    "@mui/icons-material": "^7.3.5",
    "@mui/joy": "^5.0.0-beta.48",
    "@mui/material": "^7.3.5",
    "framer-motion": "^11.5.4",
    "js-yaml": "^4.1.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-markdown": "^9.0.1",
    "react-router-dom": "^6.26.0",
    "react-terminal-ui": "^1.4.0",
    "remark-gfm": "^4.0.0"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.10.2",
    "@electron-forge/maker-appx": "^7.10.2",
    "@electron-forge/maker-pkg": "^7.10.2",
    "@electron-forge/maker-zip": "^7.10.2",
    "@electron-forge/plugin-vite": "^7.10.2",
    "@eslint/js": "^9.39.1",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^22.5.5",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^8.46.4",
    "@typescript-eslint/parser": "^8.46.4",
    "@vitejs/plugin-react": "^4.3.1",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^31.0.0",
    "eslint": "^9.39.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "typescript": "^5.5.4",
    "vite": "^5.4.5",
    "wait-on": "^7.2.0"
  }
}
