<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <!-- Hardened Runtime Permissions -->
    <!-- Allow JIT Code Execution (Required for V8/Electron) -->
    <key>com.apple.security.cs.allow-jit</key>
    <true/>
    <!-- Allow Unsigned Executable Memory (Required for V8/Electron) -->
    <key>com.apple.security.cs.allow-unsigned-executable-memory</key>
    <true/>
    <!-- Allow DYLD Environment Variables (Required for some native modules) -->
    <key>com.apple.security.cs.allow-dyld-environment-variables</key>
    <true/>
    <!-- Disable Library Validation (Required for loading unsigned native modules/python) -->
    <key>com.apple.security.cs.disable-library-validation</key>
    <true/>
    
    <!-- NOTE: Sandbox entitlement is REMOVED for standalone distribution -->
    <!-- <key>com.apple.security.app-sandbox</key> <true/> -->
</dict>
</plist>

