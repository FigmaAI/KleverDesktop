<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
  <!-- App Sandbox (Required for MAS) -->
  <key>com.apple.security.app-sandbox</key>
  <true/>

  <!-- Inherit parent entitlements -->
  <key>com.apple.security.inherit</key>
  <true/>

  <!-- Network Access (inherited by helper processes that need it) -->
  <key>com.apple.security.network.client</key>
  <true/>
  <key>com.apple.security.network.server</key>
  <true/>

  <!-- JIT Compilation (CRITICAL - inherited by child processes) -->
  <key>com.apple.security.cs.allow-jit</key>
  <true/>

  <!-- Unsigned Executable Memory (CRITICAL - inherited by child processes) -->
  <key>com.apple.security.cs.allow-unsigned-executable-memory</key>
  <true/>

  <!-- DYLD Environment Variables (CRITICAL - inherited by child processes) -->
  <key>com.apple.security.cs.allow-dyld-environment-variables</key>
  <true/>

  <!-- Disable Library Validation (CRITICAL - inherited by child processes) -->
  <key>com.apple.security.cs.disable-library-validation</key>
  <true/>
</dict>
</plist>