<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
  <!-- App Sandbox (Required for MAS) -->
  <key>com.apple.security.app-sandbox</key>
  <true/>

  <!-- Network Access -->
  <key>com.apple.security.network.client</key>
  <true/>
  <key>com.apple.security.network.server</key>
  <true/>

  <!-- File Access -->
  <key>com.apple.security.files.user-selected.read-write</key>
  <true/>
  <key>com.apple.security.files.downloads.read-write</key>
  <true/>

  <!-- USB Device Access (for ADB/Android debugging) -->
  <key>com.apple.security.device.usb</key>
  <true/>

  <!-- JIT Compilation (CRITICAL for Electron/V8) -->
  <key>com.apple.security.cs.allow-jit</key>
  <true/>

  <!-- Unsigned Executable Memory (Required for V8 JavaScript engine) -->
  <key>com.apple.security.cs.allow-unsigned-executable-memory</key>
  <true/>

  <!-- DYLD Environment Variables (Required for Electron helper processes) -->
  <key>com.apple.security.cs.allow-dyld-environment-variables</key>
  <true/>

  <!-- Disable Library Validation (Required for Electron native modules) -->
  <key>com.apple.security.cs.disable-library-validation</key>
  <true/>
</dict>
</plist>